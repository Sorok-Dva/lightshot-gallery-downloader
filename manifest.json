{
  "manifest_version": 3,
  "name": "Lightshot Gallery Downloader",
  "description": "Download every screenshot from your Lightshot gallery in one click.",
  "version": "2.0.0",
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "https://*.prntscr.com/*",
    "https://prnt.sc/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Download my Lightshot gallery"
  },
  "options_page": "credits/index.html",
  "icons": {
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://prnt.sc/gallery.html"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "https://prnt.sc/*"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "cors_fix",
        "enabled": true,
        "path": "rules/rules.json"
      }
    ]
  }
}
